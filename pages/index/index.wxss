/*搜索栏样式 */

.search {
  width: 100%;
}

.search_arr {
  border: 1px solid #ededed;
  background-color: #ededed;
  border-radius: 40rpx;
  margin: 20rpx 20rpx 20rpx 20rpx;
}

.search_arr input {
  margin: 5rpx 10rpx 5rpx 70rpx;
  height: 10rpx;
  border-radius: 5px;
}

.phcolor {
  color: #ababab;
  font-size: 30rpx;
}

.page_row {
  display: flex;
  flex-direction: row;
}

.searchcion {
  margin: 15rpx 15rpx 15rpx 15rpx;
  position: absolute;
  left: 25rpx;
  z-index: 2;
  width: 15px;
  height: 15px;
  text-align: center;
}

/*轮播banner样式  */

.swiper {
  margin-top: 20rpx;
  margin-bottom: 15rpx;

}

.swiper-item image {
  width: 100%;
  height: 100%;
}

.swiper-container {
  position: relative;
}

.swiper-container .swiper {
  height: 450rpx;
}

.swiper-container .swiper .img {
  width: 100%;
  height: 100%;
}
